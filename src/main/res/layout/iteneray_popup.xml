<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/helmet_popup_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/rounded_corners_popup_blue"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="20dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_helmet_popup_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/itinerary" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:scrollHorizontally="false"
                android:text="Itinéraire"
                android:textAlignment="center"
                android:textSize="@dimen/popup_text_size_title"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_marginStart="60dp"
                android:src="@drawable/abc_ic_clear_mtrl_alpha" />

        </LinearLayout>

        <Button
            android:id="@+id/popup_top_button1"
            style="@style/ButtonVivasomPopupSecondary"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:text="Départ"
            android:textSize="@dimen/popup_text_size_content" />

        <Button
            android:id="@+id/popup_top_button2"
            style="@style/ButtonVivasomPopupSecondary"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:text="Arrivée"
            android:textSize="@dimen/popup_text_size_content" />


        <Button
            android:id="@+id/popup_bottom_button"
            style="@style/ButtonVivasomPopupSecondary"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:text="Voir itinéraire" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>